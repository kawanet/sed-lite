{
  "include": [
    "../lib",
    "../test"
  ],
  "compilerOptions": {
    "module": "ES2022",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "outDir": "../build/esm",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "target": "ES2022",
    "types": [
      "mocha",
      "node"
    ]
  }
}
